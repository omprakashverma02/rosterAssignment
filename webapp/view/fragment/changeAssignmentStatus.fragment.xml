<core:FragmentDefinition xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog id="idFragChangeAssignmentStatus" title="Change Assignment Status" contentWidth="300px" contentHeight="200px" showHeader="false">
		<NavContainer id="idNavChangeAssignmentStatus">
			<Page title="Change Roster Assignment Status" showNavButton="false">
				<l:Grid defaultSpan="L12 M12 S12">
					<l:content>
						<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
							emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2" class="sapUiSizeCompact">
							<f:content>
								<Label text="Assignment Status" required="true"/>
								<ComboBox id="idFragChooseAssignmentStatus">
									<core:ListItem key="Yes" text="Yes"/>
									<core:ListItem key="No" text="No"/>
								</ComboBox>
							</f:content>
						</f:SimpleForm>
					</l:content>
				</l:Grid>
				<footer>
					<Toolbar>
						<Button text="Close" type="Transparent" press="handleFgAssignmentStatusClose"/>
						<ToolbarSpacer/>
					<!--	<Button text="Clear" type="Transparent" press="handleFgAssignmentStatusClear" class="sapUiSizeCompact"/>-->
						<Button text="Save" type="Emphasized" press="handleFgAssignmentStatusSave" class="sapUiSizeCompact"/>
					</Toolbar>
				</footer>
			</Page>
		</NavContainer>
	</Dialog>
</core:FragmentDefinition>